@model IEnumerable<WonosWebApp.Models.Bono>
@{
    ViewBag.Title = "Bonos";
    //Layout
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-md-6">
        <table class="table">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Tipo de Metodo
                </th>
                <th>
                    Fecha de Emision
                </th>
                <th>
                    Tipo Moneda
                </th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.Nombre,"Resultados","Bono",new { bonoId = item.Id},null)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoMetodo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.fechaEmision)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoMoneda)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
