        new SelectListItem()
        {
            Text = "Frances",
            Value = "Frances"
        },
        new SelectListItem()
        {
            Text = "Aleman",
            Value = "Aleman"
        }
    };
    List<SelectListItem> diasxAnio = new List<SelectListItem>();
    diasxAnio.Add(new SelectListItem
    {
        Text="360",
        Value= "360"
    });
    diasxAnio.Add(new SelectListItem
    {
        Text = "365",
        Value = "365"
    });

    var TipoTasa = new List<SelectListItem>()
    {
        new SelectListItem()
        {
            Text = "Efectiva",
            Value = "Efectiva"
        },
        new SelectListItem()
        {
            Text = "Nominal",
            Value = "Nominal"
        }
    };
    var PeriodoCap = new List<SelectListItem>()
    {
        new SelectListItem()
        {
            Text = "Diaria",
            Value = "1"
        },
        new SelectListItem()
        {
            Text = "Quincenal",
            Value = "15"
        },
        new SelectListItem()
        {
            Text = "Mensual",
            Value = "30"
        },
         new SelectListItem()
        {
            Text = "Bimestral",
            Value = "60"
        }, new SelectListItem()
        {
            Text = "Trimestral",
            Value = "90"
        }, new SelectListItem()
        {
            Text = "Cuatrimestral",
            Value = "120"
        }, new SelectListItem()
