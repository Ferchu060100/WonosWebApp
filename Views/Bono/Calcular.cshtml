    });
    frecuenciaBono.Add(new SelectListItem
    {
        Text = "Trimestral",
        Value = "90",
    });
    frecuenciaBono.Add(new SelectListItem
    {
        Text = "Cuatrimestral",
        Value = "120",
    });
    frecuenciaBono.Add(new SelectListItem
    {
        Text = "Semestral",
        Value = "180",
    });
    frecuenciaBono.Add(new SelectListItem
    {
        Text = "Anual",
        Value = "360",
    });

    var TipoMetodo = new List<SelectListItem>()
    {
        new SelectListItem()
        {
            Text = "Americano",
            Value = "Americano"
